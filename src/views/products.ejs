<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Preços</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <table class="table mt-5">
            <thead class="thead-dark">
                <tr>
                    <th>Produto</th>
                    <th>Preço</th>
                    <th>&nbsp;</th>
                </tr>
            </thead >
            <tbody>
                <% products.forEach((product) =>{ %>
                <tr>
                    <td><%= product.attributes.name %></td>
                    <td><%= product.attributes.price %></td>
                    <td><a class="btn-excluir" href="http://localhost:3000<%= product.links.self %>">Excluir</a></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script>
        const productList = document.querySelector('table');
        productList.addEventListener('click', (e) =>{
            e.preventDefault();
            const btnDelete = e.target;
            if(btnDelete.classList.contains('btn-excluir')){
                const url = btnDelete.href;
                fetch(url, {
                    method: 'DELETE'
                }).then(()=>{
                    btnDelete.parentNode.parentNode.remove();
                })
            }
        })
    </script>
</body>
</html>